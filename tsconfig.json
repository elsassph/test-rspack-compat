{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,

    // jsx
    "jsx": "preserve",
    "jsxImportSource": "@lightningjs/solid/dist",
    "types": ["solid-js"]
  },
  "include": ["src/**/*"]
}
